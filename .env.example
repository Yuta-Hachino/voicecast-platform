# ========================================
# VoiceCast Platform - Environment Configuration
# ========================================

# Application
NODE_ENV=development
APP_NAME=VoiceCast
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# ========================================
# Database Configuration
# ========================================
DATABASE_URL="postgresql://voicecast_user:voicecast_password@localhost:5432/voicecast"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voicecast
DB_USER=voicecast_user
DB_PASSWORD=voicecast_password

# ========================================
# Redis Configuration
# ========================================
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# Authentication & Security
# ========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET="your-session-secret-change-this"

# Encryption
ENCRYPTION_KEY="your-32-character-encryption-key"

# ========================================
# Object Storage (MinIO/S3)
# ========================================
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin123"
S3_BUCKET="voicecast"
S3_REGION="us-east-1"
S3_USE_SSL=false

# ========================================
# Media & Streaming Configuration
# ========================================
# MediaSoup (WebRTC)
MEDIASOUP_LISTEN_IP="0.0.0.0"
MEDIASOUP_ANNOUNCED_IP="127.0.0.1"
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=49999

# Audio Processing
MAX_AUDIO_BITRATE=320000
SAMPLE_RATE=96000
AUDIO_CHANNELS=2

# Streaming
RTMP_PORT=1935
HLS_PORT=8080
WEBRTC_PORT=3478

# ========================================
# AI Services Configuration
# ========================================
# OpenAI
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4"

# Anthropic Claude
ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL="claude-3-opus-20240229"

# Whisper (Speech-to-Text)
WHISPER_MODEL="large-v3"
WHISPER_API_KEY=""

# Google Cloud (for Translation)
GOOGLE_CLOUD_API_KEY=""
GOOGLE_CLOUD_PROJECT_ID=""

# Deepgram (for Transcription)
DEEPGRAM_API_KEY=""

# Pinecone (Vector Database)
PINECONE_API_KEY=""
PINECONE_ENVIRONMENT="us-east-1-aws"
PINECONE_INDEX_NAME="voicecast-embeddings"

# ========================================
# Payment Processing
# ========================================
# Stripe
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# PayPal
PAYPAL_CLIENT_ID=""
PAYPAL_SECRET=""
PAYPAL_MODE=sandbox

# ========================================
# Email Configuration
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@voicecast.app"

# SendGrid
SENDGRID_API_KEY=""

# ========================================
# Push Notifications
# ========================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=""
FCM_PROJECT_ID=""

# Apple Push Notification Service
APNS_KEY_ID=""
APNS_TEAM_ID=""
APNS_PRIVATE_KEY=""

# ========================================
# Analytics & Monitoring
# ========================================
# Elasticsearch
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME=""
ELASTICSEARCH_PASSWORD=""

# Kafka
KAFKA_BROKERS="localhost:9092"
KAFKA_CLIENT_ID="voicecast-platform"

# Sentry (Error Tracking)
SENTRY_DSN=""
SENTRY_ENVIRONMENT=development

# Google Analytics
GA_TRACKING_ID=""

# ========================================
# Social Authentication
# ========================================
# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:4000/auth/google/callback"

# Facebook OAuth
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""
FACEBOOK_CALLBACK_URL="http://localhost:4000/auth/facebook/callback"

# Twitter OAuth
TWITTER_CONSUMER_KEY=""
TWITTER_CONSUMER_SECRET=""
TWITTER_CALLBACK_URL="http://localhost:4000/auth/twitter/callback"

# Discord OAuth
DISCORD_CLIENT_ID=""
DISCORD_CLIENT_SECRET=""
DISCORD_CALLBACK_URL="http://localhost:4000/auth/discord/callback"

# ========================================
# Content Delivery Network (CDN)
# ========================================
CDN_URL=""
CLOUDFLARE_ZONE_ID=""
CLOUDFLARE_API_TOKEN=""

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Feature Flags
# ========================================
ENABLE_AI_FEATURES=true
ENABLE_TRANSCRIPTION=true
ENABLE_TRANSLATION=true
ENABLE_DEEPFAKE_DETECTION=true
ENABLE_CONTENT_MODERATION=true
ENABLE_ANALYTICS=true
ENABLE_PAYMENT=false

# ========================================
# Development & Testing
# ========================================
DEBUG=false
LOG_LEVEL=info
ENABLE_CORS=true
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Test Mode
TEST_MODE=false
MOCK_PAYMENTS=true
MOCK_AI_SERVICES=false
