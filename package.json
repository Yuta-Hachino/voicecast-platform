{
  "name": "voicecast-platform",
  "version": "0.1.0",
  "private": true,
  "description": "High-quality audio streaming platform built with Tauri, React, and Rust",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/desktop",
    "dev:ui": "npm run dev --workspace=packages/ui",
    "build": "npm run build --workspace=packages/ui && npm run build --workspace=apps/desktop",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  }
}
